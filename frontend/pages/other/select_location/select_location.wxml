<view class="map-box">
    <map bind:tap="on_click_map" bindcontroltap="end_select" class="map-container" id="myMap" latitude="{{latitude}}" longitude="{{longitude}}" markers="{{marker}}"></map>
    <view bindtap="hideModal" catchtouchmove="preventTouchMove" class="modal-mask1" wx:if="{{showModal}}"></view>
    <view class="modal-dialog1" wx:if="{{showModal}}">
        <view class="modal-text1">正确选择该位置？</view>
        <view class="modal-footer1">
            <view bindtap="onCancel1" class="modal-cancel1">
                <view style="margin-top:20rpx">取消</view>
            </view>
            <view bindtap="onConfirm1" class="modal-confirm1">
                <view style="margin-top:20rpx">确定</view>
            </view>
        </view>
    </view>
</view>
