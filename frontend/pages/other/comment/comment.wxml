<view>
    <view class="cls_title" wx:if="{{method=='event'}}">
        <text class="cls_all_comments" style="font-weight: bold;">全部评论(共{{rating.length}}人)</text>
    </view>
    <view class="cls_user_comment_info" wx:for="{{rating}}" wx:key="index">
        <image class="cls_user_photo" mode="aspectFill" src="{{item.avatar}}"></image>
        <view class="name-star-view">
            <text class="cls_user_name" style="font-weight: bold;">{{item.name}}</text>
            <view class="stars" wx:for="{{[1,2,3,4,5]}}" wx:for-index="idx" wx:for-item="itm" wx:key="{{itm.point}}">
                <view wx:if="{{idx>=5-item.point}}">
                    <image class="cls_user_comment_star" id="{{idx}}" mode="aspectFill" src="{{img_yellow_start_src}}" style="right:{{star_img_position+idx*37}}rpx"></image>
                </view>
                <view wx:else>
                    <image class="cls_user_comment_star" id="{{idx}}" mode="aspectFill" src="{{img_black_start_src}}" style="right:{{star_img_position+idx*37}}rpx"></image>
                </view>
            </view>
        </view>
        <text class="cls_comment_date">{{item.submit_time}}</text>
        <text class="cls_comment_content">{{item.comment}}</text>
    </view>
</view>
