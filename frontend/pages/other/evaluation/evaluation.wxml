<view>
    <view class="cls_score_title_bar">
        <text class="cls_score_title">评分：</text>
        <view wx:for="{{[1,2,3,4,5]}}">
            <view wx:if="{{item<=count_yellowStar}}">
                <image bindtap="subtractStar" class="cls_score_star" mode="aspectFill" src="{{img_yellow_start_src}}" style="left:{{star_img_position+index*50}}rpx"></image>
            </view>
            <view wx:else>
                <image bindtap="additionStar" class="cls_score_star" mode="aspectFill" src="{{img_black_start_src}}" style="left:{{star_img_position+index*50}}rpx"></image>
            </view>
        </view>
    </view>
    <textarea bindinput="bindInputText" class="cls_score_text_area" maxlength="200" placeholder="请输入你的评价…"></textarea>
    <text class="cls_text_count">{{text_count}}/200</text>
    <button bindtap="btn_submit" class="btn_add_comment">发表评价</button>
</view>
