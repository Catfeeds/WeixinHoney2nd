<template name="registerd_member">
    <image class="cls_user_photo" mode="aspectFill" src="{{item.avatar}}"></image>
    <view class="cls_user_comment_info">
        <view>
            <text class="cls_user_name" style="font-weight: bold;">{{item.name}}</text>
            <view class="stars" wx:for="{{[1,2,3,4,5]}}" wx:for-item="num" wx:key="index">
                <view wx:if="{{num>=6-1*item.point}}">
                    <image bindtap="substractStar" class="cls_user_comment_star" mode="aspectFill" src="{{img_yellow_star_src}}" style="right:{{star_img_position+index*37}}rpx"></image>
                </view>
                <view wx:else>
                    <image bindtap="additionStar" class="cls_user_comment_star" mode="aspectFill" src="{{img_black_star_src}}" style="right:{{star_img_position+index*37}}rpx"></image>
                </view>
            </view>
        </view>
        <text class="cls_comment_date">{{item.submit_time}}</text>
        <text class="cls_comment_content">{{item.comment}}</text>
    </view>
</template>
