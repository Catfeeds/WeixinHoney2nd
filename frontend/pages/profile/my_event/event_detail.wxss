/* pages/booking/booking.wxss */

.event {
  width: 100%;
  background-color: #f4f4f4;
  color: #333;
}

.event-bar {
  width: 100%;
  line-height: 88rpx;
  background-color: white;
}

.event-no {
  padding-left: 30rpx;
  font-size: 30rpx;
  color: #333;
}

.event-status {
  float: right;
  padding-right: 30rpx;
  font-size: 30rpx;
  font-family: "PingFangSC-Semibold";
}

.event-detail {
  margin-top: 20rpx;
  width: 100%;
  height: auto;
  background-color: white;
}

.event-picture {
  float: left;
  vertical-align: -60rpx;
  margin-left: 30rpx;
  margin-top: 20rpx;
  width: 100rpx;
  height: 100rpx;
  display: inline-block;
}

.event-name {
  margin-left: 20rpx;
  margin-top: 20rpx;
  font-size: 32rpx;
  font-family: "PingFangSC-Semibold";
  color: #333;
  letter-spacing: 0.68rpx;
  display: inline-block;
  min-width: 60%;
}


.event-content {
  margin-top: 10rpx;
  display: inline-block;
}

.event-content image {
  margin-left: 20rpx;
  width: 32rpx;
  height: 32rpx;
  display: inline-block;
  vertical-align: middle;
}

.event-content text {
  margin-left: 10rpx;
  width: 32rpx;
  height: 32rpx;
  font-family: PingFangSC-Regular;
  font-size: 26rpx;
  color: #333;
  letter-spacing: 0.56rpx;
}

.event-time {
  padding-top: 20rpx;
  width: calc(100% - 30rpx);
  height: auto;
  background-color: white;
  padding-left: 30rpx;
}

.event-time-label {
  font-size: 30rpx;
  font-family: "PingFangSC-Regular";
}



.event-phone {
  padding-top: 20rpx;
  width: calc(100% - 30rpx);
  height: auto;
  background-color: white;
  padding-left: 30rpx;
  padding-bottom:30rpx;
}

.event-phone-label {
  font-size: 30rpx;
  font-family: "PingFangSC-Regular";
  text-overflow: break-all;
  overflow: visible;
}

.event-address {
  padding-top: 20rpx;
  padding-bottom: 10rpx;
  width: calc(100% - 30rpx);
  height: auto;
  background-color: white;
  padding-left: 30rpx;
  font-size: 30rpx;
  font-family: "PingFangSC-Regular";
  text-overflow: break-all;
  overflow: visible;
}

.detail-info {
  margin-top: 20rpx;
  background-color: white;
  padding-top:10rpx;
  padding-bottom:10rpx;
}

.detail-info view {
  width: auto;
  line-height: 70rpx;
  height: auto;
}

.detail-info-label {
  border-left: 7rpx solid #e6b53c;
  padding-left: 12rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Semibold;
}

.detail-info label {
  padding-left: 12rpx;
  font-size: 30rpx;
  font-family: PingFangSC-Semi;
}

.cancel-button {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 98rpx;
  line-height: 98rpx;
  background-color: #e6b53c;
  color: white;
  text-align: center;
  font-size: 32rpx;
  font-family: PingFangSC-Semibold;
}
