.place {
    margin-top: 20rpx;
    background-color: white;
    width: 100%;
    height: 200rpx;
    border-bottom: 2rpx solid #f4f4f4;
}

.place-detail {
    height: auto;
    padding-top: 25rpx;
    padding-left: 30rpx;
}



.place-picture {
    float: left;
    width: 110rpx;
    height: 150rpx;
}

.place-role {
    margin-left: 20rpx;
    display: inline;
}
.place-name {
    vertical-align: middle;
    font-size: 32rpx;
}
.place-status {    
    float: right;
    margin-right: 20rpx;
    width: 120rpx;
    height: 54rpx;
}

.place-content {    
    height: 36rpx;
    font-size: 26rpx;
    margin-left: 120rpx;
    margin-top: 8rpx;
    font-family: "PingFangSC-Regular";
}
.place-content image {
    margin-right: 10rpx;
    vertical-align: bottom;
}
.place-type {
    width: 32rpx;
    height: 32rpx;
}
.place-type-text {
    margin-left: 5rpx;
}
.place-rating{
  display:inline;
  padding-left:15rpx;

}
.star-image{ 
  transform:translateY(-15%);
  margin-left: 5rpx;  
  width:26rpx; 
  height:26rpx
}
.rating-star-text{
  padding-left: 5rpx;
}
.place-fav_count{
  float: right;
  margin-right: 20rpx;
  font-size: 26rpx;
  color: #bbbbbb;
}

.place-state{
  height: 36rpx;
  font-size: 26rpx;
  margin-left: 120rpx;
  margin-top: 13rpx;
  font-family: "PingFangSC-Regular";  
}

.place-state image {
    margin-right: 10rpx;
    width: 80rpx;
    height: 40rpx;    
}
.place-distance{
  float: right;
  margin-right: 20rpx;  
  color: #666666;
}

.place-state .place-distance-img {    
    float: right;
    margin-right: 10rpx;
    width: 30rpx;
    height: 40rpx;
}